{
    "name": "user-billing",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "electron/main.cjs",
    "build": {
        "appId": "com.example.billingapp",
        "productName": "BillingApp",
        "files": [
            "dist/**",
            "electron/**"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        }
    },
    "scripts": {
        "dev": "vite",
        "build:react": "vite build",
        "build": "npm run build:react && electron-builder",
        "electron": "cross-env NODE_ENV=production electron electron/main.cjs",
        "dev:full": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron electron/main.cjs\""
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.2.0",
        "@mui/material": "^7.2.0",
        "axios": "^1.10.0",
        "chart.js": "^4.4.9",
        "lucide-react": "^0.512.0",
        "react": "^19.1.0",
        "react-chartjs-2": "^5.3.0",
        "react-dom": "^19.1.0",
        "react-icons": "^5.5.0",
        "react-modal": "^3.16.3",
        "react-router": "^7.6.1",
        "react-router-dom": "^7.6.2",
        "react-toastify": "^11.0.5",
        "styled-components": "^6.1.19",
        "sweetalert2": "^11.22.2",
        "tailwind-scrollbar-hide": "^4.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.0",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitejs/plugin-react": "^4.4.1",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "electron": "^36.3.2",
        "electron-builder": "^26.0.12",
        "electron-reload": "^2.0.0-alpha.1",
        "eslint": "^9.25.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^16.0.0",
        "postcss": "^8.5.4",
        "tailwindcss": "^3.4.17",
        "vite": "^6.3.5",
        "wait-on": "^8.0.3"
    }
}
